<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluefon"
    android:orientation="vertical"
    android:padding="@dimen/padding_main"
    tools:context=".ChooseTheme">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_light"
        style="@style/ThemeButtonStyle"
        android:text="@string/day_theme" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_night"
        style="@style/ThemeButtonStyle"
        android:text="@string/night_theme" />

</LinearLayout>